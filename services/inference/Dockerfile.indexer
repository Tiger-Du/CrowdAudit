# ---- build stage ----
FROM golang:1.24-alpine AS build

WORKDIR /app
ENV CGO_ENABLED=0

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Build only the indexer binary
RUN go build -trimpath -ldflags="-s -w" \
    -o indexer ./cmd/indexer

# ---- runtime stage ----
FROM gcr.io/distroless/base-debian12

WORKDIR /
COPY --from=build /app/indexer /indexer
USER nonroot:nonroot

ENTRYPOINT ["/indexer"]
